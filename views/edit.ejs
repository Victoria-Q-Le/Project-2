<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('partials/head.ejs') %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <div class="logo">
          <a href="/books">Readmate.</a>
          <i class="fa-solid fa-book"></i>
        </div>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 justify-content-end">
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/books">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#">Hello <%=currentUser.name.toUpperCase()%></a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/sessions/logout">Log out</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>


    <div class="card">
    <h1 class='card-header'>
      Edit <%=book.name%>
    </h1>
    <div class="card-body">
      <div class="form-group">
        <form action="/books/<%=book.id%>?_method=PUT" method="POST">
          <div class="form-row card-title">
            <div class="col">
              <h5 >Name:</h5><input class="card-text" type="text" name="name" value='<%=book.name%>'>
            </div>
            <div class="col">
              <h5 >Author:</h5><input class="card-text" type="text" name="author" value="<%=book.author%>">
            </div>
            <div class="col">
              <h5 >Location:latitude</h5><input class="card-text" type="text" name="lat" value="<%=book.lat%>">
            </div>
            <div class="col">
              <h5 >Location:longtitude:</h5><input class="card-text" type="text" name="lng" value="<%=book.lng%>">
            </div>
          </div>
          <div class="form-row card-title">
              <h5>Finished?</h5>
                <span>
                <input
                  class="card-text"
                  type="checkbox"
                  name="finished"
                  <%if(book.finished === true){%>
                    checked
                  <%}%>
                  />
                  </span>
        </div>
      <div class="input-group card-text">
        <div class="input-group-prepend">
          <span class="input-group-text">Notes:</span>
        </div>
        <textarea class="form-control" aria-label="With textarea" name="notes"><%=book.notes%></textarea>
      </div>

      <input class="btn btn-primary btn-sm" type="submit" value="Update Book">
    </form>
    </div>
    </div>

  </body>
</html>
